{
    "properties": {
        "id": {
            "type": "id"
        },
        "type": {
            "type": "string"
        },
        "action": {
            "type": "string"
        },
        "raw_response": {
            "type": "html",
            "description": "Raw response, as returned by the mailer."
        },
        "message_id": {
            "type": "string"
        },
        "from": {
            "type": "string",
            "description": "Sender's (from) email"
        },
        "to": {
            "type": "string",
            "description": "Recipient's (to) email"
        },
        "subject": {
            "type": "string"
        },
        "send_date": {
            "type": "date-time"
        },
        "ip": {
            "type": "ip"
        },
        "session_id": {
            "type": "string"
        }
    },

    "sources": {
        "default": {
            "type": "database",
            "table": "charcoal_email_logs"
        }
    },
    "default_source": "default",

    "admin": {
        "lists": {
            "email_logs": {
                "title": {
                    "fr": "Logs d'envoi de courriel",
                    "en": "Email logs"
                },
                "properties": [
                    "send_date",
                    "from",
                    "to",
                    "subject"
                ]
            }
        },
        "default_list": "email_logs",

        "forms": {
            "email_logs": {
                "groups": {
                    "title": {
                        "fr": "Log d'envoi de courriel",
                        "en": "Email log"
                    },
                    "infos": {
                        "properties": [
                            "send_date",
                            "from",
                            "to",
                            "subject",
                            "message_id",
                            "raw_response",
                            "ip",
                            "session_id"
                        ]
                    }
                }
            }
        },
        "default_form": "email_logs",

        "dashboards": {
            "admin.edit": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "form_ident": "email_logs",
                        "obj_type": "charcoal/app/email/email-log"
                    }
                }
            },
            "admin.table": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "email_logs",
                        "obj_type": "charcoal/app/email/email-log"
                    }
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
